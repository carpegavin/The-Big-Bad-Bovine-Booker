{{!-- Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

{{!-- Create a button in `index.handlebars` that will submit the user input into the database. --}}
<div class="container">
  <div class="jumbotron">
        <h1>The Big Bad Bovine Booker </h1>
        <br>
        <h2>Create the tastiest</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <div class="form-group">
                      <label for="ca">Burger Name</label>
                      <input type="text" id="ca" name="name">
                    </div>
                    <button type="submit" class="btn     btn-success" id="addburger">
                    <span class="fas">&#xf805;></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>

  <h2>Burgers DEVOURED!</h2>

  <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
  </ul>
  
  <div class="panel-body"></div>
    <h2>Burgers waiting to be devoured</h2>
    <ul>
    {{#each burgers}}
    {{#unless devoured}}

    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
    <button type="button" class="eatburger btn btn-primary" id="eatbutton" data-id="{{this.id}}"
    data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
    <hr>
    {{/unless}}
    {{/each}}
    </ul>

</div>

                
