<div class="container">
  <div class="jumbotron">
        <h1 class="booker">The Big Bad Bovine Booker </h1>
        <br>
        <h2 class="taste">Create the tastiest</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <div class="form-group">
                      <label for="ca">Burger</label>
                      <input type="text" id="ca" name="name">
                      <button type="submit" class="btn btn-success" id="addburger">
                      <span class="fa fa-cutlery"></span>
                      </button>
                    </div>
                </div>
            </form>
        </panel>
    </div>
</div>
  
<div class="col-md-4">
  <h2>Burgers TO BE devoured</h2>
  <hr>
  <ul class="toeat">
    {{#each burgers}}
    {{#unless devoured}}
    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
    <button type="button" class="eatburger btn btn-primary" id="eatbutton" data-id="{{this.id}}"
    data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
    <hr>
    {{/unless}}
    {{/each}}
  </ul>
</div>



<div class="col-md-4">
  <div class="devour">
    <h2>Burgers DEVOURED!</h2>
    <hr>
    <ul class="eaten">
      {{#each burgers}}
      {{#if devoured}}
      <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
      <hr>
      {{/if}}
      {{/each}}
    </ul>
  </div> 
</div>

                
